<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infoActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/infohome"
                android:layout_width="match_parent"
                android:layout_height="342dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/info_planner"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/infosearch"
                android:layout_width="match_parent"
                android:layout_height="315dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/info_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/infoingri"
                android:layout_width="match_parent"
                android:layout_height="279dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/info_ingri"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/infosearched"
                android:layout_width="104dp"
                android:layout_height="80dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/info_lookup"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>